<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fint_grey"
    android:orientation="vertical"
    tools:context=".activities.Home_Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty_dp"
            android:orientation="horizontal"

            >

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="@dimen/fifty_dp"
                android:layout_height="@dimen/fourty"
                android:layout_marginEnd="@dimen/thirty_dp"
                android:background="@color/transparant"
                android:src="@drawable/backbutton" />

            <ImageView
                android:id="@+id/profile_imageView"
                android:layout_width="@dimen/fifty_dp"
                android:layout_height="@dimen/fifty_dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/twenty_dp"
                android:src="@drawable/profile_icon" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twenty_dp"
                android:layout_weight="1.9"
                android:orientation="vertical"
                android:paddingStart="@dimen/twenty_dp"
                android:paddingEnd="@dimen/fifteen_dp"
                android:paddingBottom="@dimen/twenty_dp"

                >

                <TextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/seventeen_sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/uName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/seventeen_sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fourty"
                    android:text="Total Devices"
                    android:textColor="@color/white"
                    android:textSize="@dimen/seventeen_sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:text="100"
                    android:textColor="@color/white"
                    android:textSize="@dimen/twenty_four_sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/banner"
                android:layout_weight="0.1"
                >


            </ImageView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/ten_dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_margin="@dimen/ten_dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/ten_dp"
                app:cardElevation="@dimen/ten_dp">

                <LinearLayout
                    android:id="@+id/Total"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/eighty_dp"
                        android:layout_height="@dimen/eighty_dp"
                        android:layout_marginTop="@dimen/twenty_dp"
                        android:background="@drawable/circle_blue"
                        android:padding="@dimen/fifteen_dp"
                        android:src="@drawable/total" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fourty"
                        android:layout_marginTop="@dimen/twenty_dp"
                        android:background="@color/black"
                        android:gravity="center"
                        android:text="100 Total"
                        android:textColor="@color/white"
                        android:textSize="@dimen/thirteen_sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_margin="@dimen/ten_dp"
                android:clickable="true"

                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/ten_dp"
                app:cardElevation="@dimen/ten_dp">

                <LinearLayout
                    android:id="@+id/Runnning"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/eighty_dp"
                        android:layout_height="@dimen/eighty_dp"
                        android:layout_marginTop="@dimen/twenty_dp"
                        android:background="@drawable/circle_green"
                        android:padding="@dimen/fifteen_dp"
                        android:src="@drawable/running" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fourty"
                        android:layout_marginTop="@dimen/twenty_dp"
                        android:background="@color/black"
                        android:gravity="center"
                        android:text="80 Running"
                        android:textColor="@color/white"
                        android:textSize="@dimen/thirteen_sp"
                        android:textStyle="bold" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_margin="@dimen/ten_dp"
                android:clickable="true"

                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/ten_dp"
                app:cardElevation="@dimen/ten_dp">

                <LinearLayout
                    android:id="@+id/Parked"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/eighty_dp"
                        android:layout_height="@dimen/eighty_dp"
                        android:background="@drawable/circle_orange"
                        android:padding="@dimen/fifteen_dp"
                        android:src="@drawable/parked" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fourty"
                        android:layout_marginTop="@dimen/twenty_dp"
                        android:background="@color/black"
                        android:gravity="center"
                        android:text="15 Parked"
                        android:textColor="@color/white"
                        android:textSize="@dimen/thirteen_sp"
                        android:textStyle="bold" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_margin="@dimen/ten_dp"
                android:clickable="true"

                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/ten_dp"
                app:cardElevation="@dimen/ten_dp">

                <LinearLayout
                    android:id="@+id/Out_Of_Network"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/eighty_dp"
                        android:layout_height="@dimen/eighty_dp"
                        android:background="@drawable/circle_pink"
                        android:padding="@dimen/fifteen_dp"
                        android:src="@drawable/out_off_network" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fourty"
                        android:layout_marginTop="@dimen/twenty_dp"
                        android:background="@color/black"
                        android:gravity="center"
                        android:text="5 Out Of Network
"
                        android:textColor="@color/white"
                        android:textSize="@dimen/thirteen_sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>